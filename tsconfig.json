{
  "compilerOptions": {
    "target": "es5",                                  
    "module": "commonjs",                                
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",         
    "esModuleInterop": true,     
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                         
    "forceConsistentCasingInFileNames": true,           
    "skipLibCheck": true,
    "paths": {
      "@adapters/*":[
        "adapters/*"
      ],
      "@entities/*":[
        "entities/*"
      ],
      "@infra/*":[
        "infra/*"
      ],
      "@use-cases/*":[
        "use-cases/*"
      ],
    }
  }
}
